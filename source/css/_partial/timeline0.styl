.wiki-timeline
  position relative
  max-width 450px
  margin-left 20px

  &::after
    content ''
    position absolute
    width 3px
    background-color #a99d9d
    top 0
    bottom 0
    left 26%
    margin-left -2px
    border-radius 5px

  .container
    display flex
    align-items center
    margin 6px 0
    font-size 10px

  .date
    width 15%
    text-align center
    padding 10px
    background #3B82F6
    border-radius 5px
    border 2px solid #474343
    margin-right 40px
    color black
    height 14px
    line-height 14px

  .content
    width 65%
    padding 4px 10px
    background-color white
    position relative
    border-radius 6px
    /*box-shadow 0 2px 5px rgba(0,0,0,0.1)*/
    margin-left 20px

    content-title
      display block
      font-size 1.17em
      font-weight bold
      margin-top 1em
      margin-bottom 1em

    content-title
      margin 0
      padding 0
      font-size 12px
      font-weight bold
      color #13b3f4

    p
      color black
      margin-bottom 3px
      margin-top 1px

  .dot
    width 15px
    height 15px
    border 2px solid #474343
    border-radius 50%
    position absolute
    left 26%
    transform translateX(-50%)
    z-index 3    